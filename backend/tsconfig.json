{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "resolveJsonModule": true,

  
    "typeRoots": ["./node_modules/@types", "./src/types"],

    "baseUrl": ".",
    "paths": {
      "bcryptjs": ["./src/types/bcryptjs.d.ts"]
    }
  },
  "include": ["src", "config", "src/types"]
}
